<%= content_tag :h1, "New Song" %>


<%= form_for @song do |s| %>

  <%= label_for :song_title, "Song title:"%>
  <%= s.text_field :title %>

  <%= label_for :song_released, "Released?"%><%= s.check_box_tag :released, value: true  %>

  <%= label_for :song_release_year, "Year released:" %>
  <%= s.text_field :release_year %>

  <%= label_for :song_artist_name, "Artist:" %>
  <%= s.text_field :artist_name %>

  <%= label_for :song_genre, "Genre:" %>
  <%= s.text_field :genre %>

  <%= s.submit %>

<% end %>
