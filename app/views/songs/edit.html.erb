<% if @song.errors.any? %>
  <h3>There are <%= pluralize(@song.errors.count, "error") %></h3>
  <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @song do |f| %>
  <%= f.text_field :title %>
  <%= f.check_box :released %>
  <%= f.number_field :release_year %>
  <%= f.text_field :artist_name %>
  <%= f.text_field :genre %>

  <%= f.submit %>
<% end %>
