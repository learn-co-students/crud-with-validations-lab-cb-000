<h1>Songs#edit</h1>
<p>Find me in app/views/songs/edit.html.erb</p>

<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>

      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.text_field :title %>
    <%= f.check_box :released %>
    <%= f.number_field :release_year %>
    <%= f.text_field :genre %>
    <%= f.text_field :artist_name %>
    <%= f.submit %>
<% end %>
