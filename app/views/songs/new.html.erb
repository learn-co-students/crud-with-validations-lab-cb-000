<!DOCTYPE html>
<html>
    <head>
        <title>Green Linings Song Book</title>
    </head>
    <body>
        <%= form_for(@song) do |f| %>

            <% if @song.errors.any? %>
                <div id="error_explanation" style="color:red;">
                <h3>Some fields have errors:</h3>
                    <% @song.errors.full_messages.each do |message| %>
                    <ul>
                        <li><%= message %></li>
                    </ul>
                    <% end %>
                </div>
            <% end %>

            <%= f.label :title %>
            <%= f.text_field :title, value: @song.title %>
            <br>
            <%= f.label :released %>
            <%= f.check_box :released, value: @song.released %>
            <br>
            <%= f.label :release_year %>
            <%= f.text_field :release_year, value: @song.release_year %>
            <br>
            <%= f.label :artist_name %>
            <%= f.text_field :artist_name, value: @song.artist_name %>
            <br>
            <%= f.label :genre %>
            <%= f.text_field :genre, value: @song.genre %>
            <br>
            <%= f.submit %>
        <% end %>
    </body>
</html>