<h2>Create a Song</h2>
<%= form_tag songs_path, method: "post" do %>
<% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
   <% if @song.errors[:title].any? %>
    <div class="field_with_errors">
  <% else %>
    <div class="field">
  <% end %>
    <%= label_tag "song_title", "Title" %>
    <%= text_field_tag "song[title]", @song.title %>
  </div>

  <% if @song.errors[:released].any? %>
    <div class="field_with_errors">
  <% else %>
    <div class="field">
  <% end %>
    <%= label_tag "song_released", "Released" %>
    <%= check_box_tag "song[released]", @song.released %>
  </div>

   <% if @song.errors[:release_year].any? %>
    <div class="field_with_errors">
  <% else %>
    <div class="field">
  <% end %>
    <%= label_tag "song_release_year", "Release Year" %>
    <%= text_field_tag "song[release_year]", @song.release_year %>
  </div>
  <% if @song.errors[:genre].any? %>
    <div class="field_with_errors">
  <% else %>
    <div class="field">
  <% end %>
    <%= label_tag "song_genre", "Genre" %>
    <%= text_field_tag "song[genre]", @song.genre %>
  </div>
  <% if @song.errors[:artist_name].any? %>
    <div class="field_with_errors">
  <% else %>
    <div class="field">
  <% end %>
    <%= label_tag "song_arstist_name", "Artist Name" %>
    <%= text_field_tag "song[artist_name]", @song.artist_name %>
  </div>

  <%= submit_tag "Create" %>
<% end %>