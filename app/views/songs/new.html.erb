<h1>Add New Song</h1>

<% if @song.errors.any? %>
  <div id="error_explanation">
    <h3>Errors:</h3>
      <ul>
        <% @song.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </h3>
  </div>
<% end %>

<%= form_for @song do |f| %>
  <%= f.label "Song Title:" %>
  <%= f.text_field :title %>
  <br>

  <%= f.label "Artist Name:" %>
  <%= f.text_field :artist_name %>
  <br>

  <%= f.label "Year Released:" %>
  <%= f.text_field :release_year %>
  <br>

  <%= f.label "Released:" %>
  <%= f.text_field :released %>
  <br>

  <%= f.label "Genre:" %>
  <%= f.text_field :genre %>
  <br>

  <%= f.submit "Add Song"%>
<% end %>

