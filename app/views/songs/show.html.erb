<h1>Song Title: <%= @song.title %></h1>
<h2> Artist: <%= @song.artist_name %></h2>
<h2> Genre: <%= @song.genre %></h2>
<% if @song.released %>
  <h3> Year Released: <%= @song.release_year %></h3>
<% else %>
  <h3> Releasing soon... </h3>
<% end %>

<%= form_tag edit_song_path, method: :get do %>
  <%= submit_tag "Edit song" %>
<% end %>

<br>
<%= link_to 'View all', songs_path %>
<%#= link_to "Edit Song", edit_song_path(@song) %>

<br><br>
<%= form_tag song_path(@song.id), method: "delete" do %>
  <%= submit_tag "Delete #{@song.title} by #{@song.artist_name}" %>
<% end %>
