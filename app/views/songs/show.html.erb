<!DOCTYPE html>
<html>
    <head>
        <title><%= @song.title %></title>
    </head>
    <body>
        <h1><%= @song.title %></h1>
        <p>Released: <%= @song.released %></p>
        <p>Release Year: <%= @song.release_year %></p>
        <p>Artist Name: <%= @song.artist_name %></p>
        <p>Genre: <%= @song.genre %></p>

        <%= form_tag song_path(@song), method: "delete" do %>
            <%= submit_tag "Delete #{@song.title}" %>
        <% end %>

    </body>
</html>